@model AppMinimarket.Models.Marca

@{
    ViewData["Title"] = "AgregarMarca";
}

<div class="d-flex justify-content-center align-items-center pt-2 pb-2">
    <div class="row text-center col-md-6">
        <h3 class="text-center">Agregar Nueva Marca</h3>
        <div class="col-md-12">
            <form asp-action="AgregarMarca">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group" style="display: none;">
                    <label asp-for="idMarca" class="control-label"></label>
                    <input asp-for="idMarca" class="form-control" hidden />
                    <span asp-validation-for="idMarca" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="nombreMarca" class="control-label"></label>
                    <input asp-for="nombreMarca" class="form-control" />
                    <span asp-validation-for="nombreMarca" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <a asp-action="Marcas" class="btn btn-outline-info">Regresar</a>
                    <a asp-action="AgregarMarca" class="btn btn-outline-info">Limpiar</a>
                    <input type="submit" value="Grabar" class="btn btn-info" />
                </div>
            </form>
        </div>
        <br />
        @if (!string.IsNullOrEmpty(ViewBag.mensaje))
        {
            <div class="alert alert-info alert-dismissible fade show mt-2" role="alert">
                @ViewBag.mensaje
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
    </div>
</div>
