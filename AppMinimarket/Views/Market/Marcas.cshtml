@model IEnumerable<AppMinimarket.Models.Marca>

@{
    ViewData["Title"] = "Marcas";
}

<h3 class="text-center">Listado de Marcas</h3>

<p>
    <a asp-action="AgregarMarca" class="btn btn-outline-info">Agregar Nuevo</a>
</p>
<table class="table table-bordered table-info table-hover text-center">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.idMarca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nombreMarca)
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.idMarca)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nombreMarca)
                </td>
                <td>
                    @Html.ActionLink("Editar", "EditarMarca", new { id = item.idMarca }, new { @class = "btn btn-info btn-sm" }) |
                    @Html.ActionLink("Eliminar", "EliminarMarca", new { id = item.idMarca }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>
