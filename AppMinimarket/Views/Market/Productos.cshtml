@model IEnumerable<AppMinimarket.Models.Producto>

@{
    ViewData["Title"] = "Productos";
}
<h3 class="text-center">Listado de Productos</h3>

<div id="buscar" class="mt-3 mb-3">
    <form asp-action="Productos" method="get" id="formBusqueda" class="input-group mb-3">
        <input type="text" class="form-control" name="texto" placeholder="Ingrese nombre o marca" aria-label="Ingrese nombre o marca" aria-describedby="btnBuscar">
        <button class="btn btn-info" type="submit" id="btnBuscar">Buscar</button>
    </form>
</div>
<p>
    <a asp-action="AgregarProducto" class="btn btn-outline-info">Agregar Nuevo</a>
</p>
<table class="table table-bordered table-info table-hover text-center">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.idProducto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nombreProd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.stock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nombreCate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nombreMarca)
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.idProducto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nombreProd)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.precio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.stock)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nombreCate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nombreMarca)
                </td>
                <td>
                    @Html.ActionLink("Editar", "EditarProducto", new { id = item.idProducto }, new { @class = "btn btn-info btn-sm" }) |
                    @Html.ActionLink("Eliminar", "EliminarProducto", new { id = item.idProducto }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>
